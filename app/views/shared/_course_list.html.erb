
<% avgs = course.avg %>

<ul class="search-result-wrap">
    <%= link_to course do%>
      <li class="course name"><%= fa_icon "file-pdf-o" if course.syllabus? %> <%= course.name %> (<%= course.crn.to_sentence %>)</li>
      <li class="course prof"><%= course.prof_name_raw %></li>
      <li class="course ratings">
      <span>Clarity: <%= avgs[:clarity]%></span>
      <span>Difficulty: <%= avgs[:workload]%></span>
      <span>Worth it?: <%= avgs[:worthit]%></span>
      <li class="course last"><%=h course.last %>
    <% end %>
</ul>
